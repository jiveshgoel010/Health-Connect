<main>
    <div class="blogs-wrapper">
        <div class="heading">
            Blogs - Write you heart out...
        </div>
        <div id="addNewButton">
            <a href="/add-blogpost">Add blog <span>+</span></a>
        </div>
    </div>

    <div class="blogs-content">
        <ul class="blogs">
            <% data.forEach(element=> { %>
                <li>
                    <div>
                        <a href="/blogpost/<%= element._id %>" class="blog-title">
                            <%= element.title %> &nearr;
                        </a>
                    </div>
                    <div class="blog-buttons">
                        <a href="/edit-blogpost/<%= element._id %>" class="btn">Edit</a>

                        <form action="/delete-blogpost/<%= element._id %>?_method=DELETE" method="POST">
                            <input type="submit" value="Delete" class="btn" id="deleteBtn">
                        </form>
                    </div>
                </li>
                <% }) %>
        </ul>
    </div>
</main>